---
import type { CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'papers'> | CollectionEntry<'courses'> | CollectionEntry<'reflections'> | CollectionEntry<'misc'>;
  collection: 'papers' | 'courses' | 'reflections' | 'misc';
}

const { entry, collection } = Astro.props;
const { data, slug } = entry;

// 格式化日期
const year = new Date(data.date).getFullYear();

// 类型标签映射
const typeLabels = {
  paper: { en: 'Paper', zh: '论文' },
  course: { en: 'Course', zh: '课程' },
  reflection: { en: 'Reflection', zh: '思考' },
  misc: { en: 'Misc', zh: '杂项' },
};

const typeLabel = typeLabels[data.type];
---

<a
  href={`/log/${collection}/${slug}`}
  class="entry-card"
  data-lesson-number={'lesson_number' in data ? data.lesson_number : undefined}
>
  <div class="card-main">
    <h3 class="card-title-en">{data.title_en}</h3>
    <p class="card-title-zh">{data.title_zh}</p>

    {data.summary && (
      <p class="card-summary">{data.summary}</p>
    )}
  </div>

  <div class="card-meta">
    <span class="meta-year">{year}</span>
    <span class="meta-type">
      {typeLabel.en} / {typeLabel.zh}
    </span>
    <span class={`meta-status status-${data.status}`}>{data.status}</span>

    {'lesson_number' in data && (
      <span class="meta-lesson">第 {data.lesson_number} 课</span>
    )}
  </div>

  {data.tags.length > 0 && (
    <div class="card-tags">
      {data.tags.map(tag => (
        <span class="tag-chip">{tag}</span>
      ))}
    </div>
  )}
</a>

<style>
  .entry-card {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    padding: 2rem;
    border: 1px solid var(--ink-soft);
    transition: border-color 0.3s ease, transform 0.3s ease;
    cursor: pointer;
    min-height: 280px;
    height: 100%;
  }

  .entry-card:hover {
    border-color: var(--ink-main);
    transform: translateY(-2px);
  }

  .card-main {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .card-title-en {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    color: var(--ink-main);
    line-height: 1.3;
    letter-spacing: 0.02em;
  }

  .card-title-zh {
    font-family: var(--font-zh-body);
    font-size: 2rem;
    color: var(--ink-soft);
    opacity: 0.8;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .card-summary {
    font-family: var(--font-sans);
    font-size: 0.9375rem;
    color: var(--ink-soft);
    line-height: 1.6;
    margin-top: 0.5rem;
  }

  .card-meta {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    flex-wrap: wrap;
    font-size: 0.875rem;
  }

  .meta-year {
    font-family: monospace;
    color: var(--ink-soft);
  }

  .meta-type {
    font-family: var(--font-sans);
    color: var(--ink-soft);
  }

  .meta-status {
    font-family: monospace;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .status-published {
    color: var(--ink-main);
  }

  .status-draft {
    color: var(--ink-soft);
    opacity: 0.6;
  }

  .meta-lesson {
    font-family: var(--font-zh-display);
    font-size: 1.5rem;
    color: var(--ink-soft);
    opacity: 0.7;
  }

  .card-tags {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .tag-chip {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    color: var(--ink-soft);
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--ink-soft);
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .entry-card {
      padding: 1.5rem;
    }

    .card-title-en {
      font-size: 1.25rem;
    }

    .card-title-zh {
      font-size: 1.75rem;
    }

    .card-summary {
      font-size: 0.875rem;
    }

    .card-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .meta-lesson {
      font-size: 1.25rem;
    }
  }
</style>
