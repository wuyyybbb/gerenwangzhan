---
// StatsPanel - RPG-style stats panel for Command Center (Resume)
interface Stat {
  label: string;
  value: string | number;
  icon?: string;
}

interface Props {
  stats: Stat[];
}

const { stats } = Astro.props;
---

<div class="stats-panel">
  <h2 class="panel-title">Character Stats</h2>
  <div class="stats-grid">
    {stats.map((stat) => (
      <div class="stat-item">
        {stat.icon && <span class="stat-icon">{stat.icon}</span>}
        <span class="stat-label">{stat.label}</span>
        <span class="stat-value">{stat.value}</span>
      </div>
    ))}
  </div>
</div>

<style>
  .stats-panel {
    border: 2px solid var(--ink-main);
    padding: 2rem;
    max-width: 600px;
  }

  .panel-title {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    border: 1px solid var(--ink-soft);
  }

  .stat-icon {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--ink-soft);
    margin-bottom: 0.25rem;
  }

  .stat-value {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--ink-main);
  }
</style>
