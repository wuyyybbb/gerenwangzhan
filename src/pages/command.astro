---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import '../styles/global.css';

// 获取所有已发布的 command-center 文章
const commandCenterPosts = await getCollection('command-center', ({ data }) => {
  return data.status === 'published';
});

// 按日期降序排序
commandCenterPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// 类型标签映射
const typeLabels = {
  'decision-log': { en: 'Decision Log', zh: '决策日志' },
  'trade-offs': { en: 'Trade-offs', zh: '权衡分析' },
  'system-thinking': { en: 'System Thinking', zh: '系统思考' },
  'direction-notes': { en: 'Direction Notes', zh: '方向笔记' },
};

// 统计各类型数量
const counts = {
  all: commandCenterPosts.length,
  'decision-log': commandCenterPosts.filter(p => p.data.type === 'decision-log').length,
  'trade-offs': commandCenterPosts.filter(p => p.data.type === 'trade-offs').length,
  'system-thinking': commandCenterPosts.filter(p => p.data.type === 'system-thinking').length,
  'direction-notes': commandCenterPosts.filter(p => p.data.type === 'direction-notes').length,
};

// 分类导航配置
const filters = [
  { key: 'all', label_en: 'All', label_zh: '全部' },
  { key: 'decision-log', label_en: 'Decision Log', label_zh: '决策日志' },
  { key: 'trade-offs', label_en: 'Trade-offs', label_zh: '权衡分析' },
  { key: 'system-thinking', label_en: 'System Thinking', label_zh: '系统思考' },
  { key: 'direction-notes', label_en: 'Direction Notes', label_zh: '方向笔记' },
];
---

<BaseLayout title="Command Center - Resume & About">
  <main class="page-container">
    <!-- 返回按钮 -->
    <a href="/" class="back-link">
      ← Back to Map
    </a>

    <!-- 内容区 -->
    <div class="content-wrapper">
      <h1 class="page-title">Command Center</h1>
      <p class="narrative-subtitle">"A synthesis of roles, skills, and intent."</p>

      <!-- Section 1: Identity -->
      <section class="identity-section">
        <h2 class="section-label">IDENTITY</h2>
        <p class="identity-statement">
          Builder → Intelligent Pioneer
        </p>
      </section>

      <!-- Section 2: Main Quest -->
      <section class="quest-section">
        <h2 class="section-label">MAIN QUEST</h2>
        <p class="quest-statement">
          Build intelligent systems that amplify human capability without diminishing human agency
        </p>
      </section>

      <!-- Section 4: Principles -->
      <section class="principles-section">
        <h2 class="section-label">PRINCIPLES</h2>
        <div class="principles-list">
          <div class="principle-item">
            <p class="principle-en">Build systems, not demos.</p>
            <p class="principle-zh">构建系统，而非演示</p>
          </div>
          <div class="principle-item">
            <p class="principle-en">Prefer clarity over novelty.</p>
            <p class="principle-zh">清晰优于新奇</p>
          </div>
          <div class="principle-item">
            <p class="principle-en">AI should extend, not replace, human agency.</p>
            <p class="principle-zh">AI 应当延展而非取代人的能动性</p>
          </div>
        </div>
      </section>
    </div>

    <!-- Decision Logs - 全宽展示 -->
    <section class="decision-logs-section">
      <h2 class="section-label">DECISION LOGS</h2>
      <p class="section-description">Strategic decisions, trade-offs, and architectural thinking.</p>
      <p class="section-description-zh">战略决策、权衡分析与架构思考</p>

      <!-- 分类导航 -->
      <div class="gallery-filters">
        {filters.map(filter => (
          <a
            href={`/command?filter=${filter.key}`}
            class:list={['filter-tab', { active: filter.key === 'all' }]}
            data-filter={filter.key}
          >
            <span class="filter-label-en">{filter.label_en}</span>
            <span class="filter-label-zh">{filter.label_zh}</span>
          </a>
        ))}
      </div>

      <!-- 内容统计 -->
      <div class="entry-count">
        <span class="count-number" id="entry-count">{commandCenterPosts.length}</span>
        <span class="count-label">entries</span>
      </div>

      <div class="decision-logs-grid">
        {commandCenterPosts.map((post) => (
          <a href={`/log/command-center/${post.slug}`} class="decision-card" data-type={post.data.type}>
            <div class="card-main">
              <h3 class="card-title-en">{post.data.title_en}</h3>
              <p class="card-title-zh">{post.data.title_zh}</p>
              {post.data.summary && (
                <p class="card-summary">{post.data.summary}</p>
              )}
            </div>

            <div class="card-meta">
              <time class="meta-date" datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('zh-CN', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <span class="meta-type">
                {typeLabels[post.data.type].en} / {typeLabels[post.data.type].zh}
              </span>
              <span class="meta-status">PUBLISHED</span>
            </div>

            {post.data.tags.length > 0 && (
              <div class="card-tags">
                {post.data.tags.map(tag => (
                  <span class="tag-chip">{tag}</span>
                ))}
              </div>
            )}
          </a>
        ))}
      </div>

      <!-- 空状态 -->
      <div class="empty-state" id="empty-state" style="display: none;">
        <p class="empty-message">No entries found for this filter.</p>
        <p class="empty-message-zh">该分类暂无内容。</p>
      </div>
    </section>

  </main>
</BaseLayout>

<script define:vars={{ counts }}>
  // 客户端过滤逻辑
  function filterEntries() {
    const urlParams = new URLSearchParams(window.location.search);
    const filter = urlParams.get('filter') || 'all';

    const entryCards = document.querySelectorAll('.decision-card');
    const entryCount = document.getElementById('entry-count');
    const emptyState = document.getElementById('empty-state');

    let visibleCount = 0;

    entryCards.forEach(card => {
      const type = card.getAttribute('data-type');
      const shouldShow = filter === 'all' || type === filter;

      if (shouldShow) {
        card.style.display = 'flex';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    // 更新计数
    if (entryCount) {
      entryCount.textContent = counts[filter] || visibleCount;
    }

    // 显示/隐藏空状态
    if (emptyState) {
      emptyState.style.display = visibleCount === 0 ? 'block' : 'none';
    }

    // 更新选中的过滤器样式
    const filterTabs = document.querySelectorAll('.filter-tab');
    filterTabs.forEach(tab => {
      const tabFilter = tab.getAttribute('data-filter');
      if (tabFilter === filter) {
        tab.classList.add('active');
      } else {
        tab.classList.remove('active');
      }
    });
  }

  // 页面加载时过滤
  document.addEventListener('DOMContentLoaded', filterEntries);

  // 监听浏览器前进/后退
  window.addEventListener('popstate', filterEntries);

  // Astro页面切换
  document.addEventListener('astro:page-load', filterEntries);
</script>

<style>
  .page-container {
    min-height: 100vh;
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--ink-soft);
    margin-bottom: 3rem;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: var(--ink-main);
  }

  .content-wrapper {
    max-width: 800px;
    margin-bottom: 4rem;
  }

  .page-title {
    font-family: var(--font-serif);
    font-size: 3rem;
    color: var(--ink-main);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .narrative-subtitle {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    color: var(--ink-soft);
    font-style: italic;
    margin-bottom: 4rem;
    line-height: 1.6;
  }

  /* Section 样式 */
  section {
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(74, 74, 74, 0.2);
  }

  section:last-child {
    border-bottom: none;
  }

  .section-label {
    font-family: monospace;
    font-size: 0.75rem;
    color: var(--ink-soft);
    letter-spacing: 0.15em;
    margin-bottom: 2rem;
    font-weight: 400;
  }

  /* Identity Section */
  .identity-statement {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    color: var(--ink-main);
    line-height: 1.5;
  }

  /* Quest Section */
  .quest-statement {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    color: var(--ink-main);
    line-height: 1.7;
    font-style: italic;
  }

  /* Principles Section */
  .principles-section {
    border-bottom: 1px solid rgba(74, 74, 74, 0.2) !important;
  }

  .principles-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .principle-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .principle-en {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    color: var(--ink-main);
    line-height: 1.5;
    letter-spacing: 0.02em;
  }

  .principle-zh {
    font-family: var(--font-zh-display);
    font-size: 1.875rem;
    color: var(--ink-soft);
    opacity: 0.75;
    letter-spacing: 0.05em;
  }

  /* Decision Logs Section */
  .decision-logs-section {
    margin-top: 3rem;
  }

  .section-description {
    font-family: var(--font-sans);
    font-size: 1rem;
    color: var(--ink-soft);
    margin-bottom: 0.5rem;
    font-style: italic;
    line-height: 1.6;
  }

  .section-description-zh {
    font-family: var(--font-zh-body);
    font-size: 1.125rem;
    color: var(--ink-soft);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  /* 分类导航 */
  .gallery-filters {
    display: flex;
    gap: 1.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(74, 74, 74, 0.2);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .filter-tab {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    padding: 0.75rem 1.5rem;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
  }

  .filter-tab:hover {
    border-color: var(--ink-soft);
  }

  .filter-tab.active {
    border: 2px solid var(--ink-main);
    background-color: rgba(31, 31, 31, 0.05);
  }

  .filter-label-en {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--ink-main);
    letter-spacing: 0.05em;
  }

  .filter-label-zh {
    font-family: var(--font-zh-display);
    font-size: 1.75rem;
    color: var(--ink-soft);
    opacity: 0.7;
    letter-spacing: 0.05em;
  }

  .filter-tab.active .filter-label-en {
    font-weight: 600;
  }

  .filter-tab.active .filter-label-zh {
    opacity: 1;
  }

  /* 内容统计 */
  .entry-count {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .count-number {
    font-family: var(--font-serif);
    font-size: 2rem;
    color: var(--ink-main);
  }

  .count-label {
    font-family: monospace;
    font-size: 0.875rem;
    color: var(--ink-soft);
    letter-spacing: 0.1em;
  }

  /* 空状态 */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-message {
    font-family: var(--font-sans);
    font-size: 1rem;
    color: var(--ink-soft);
    margin-bottom: 0.5rem;
  }

  .empty-message-zh {
    font-family: var(--font-zh-display);
    font-size: 2rem;
    color: var(--ink-soft);
    opacity: 0.7;
  }

  .decision-logs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 2rem;
  }

  .decision-card {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    padding: 2rem;
    border: 1px solid var(--ink-soft);
    transition: border-color 0.3s ease, transform 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    min-height: 280px;
    height: 100%;
  }

  .decision-card:hover {
    border-color: var(--ink-main);
    transform: translateY(-2px);
  }

  .card-main {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex: 1;
  }

  .card-title-en {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    color: var(--ink-main);
    line-height: 1.3;
    letter-spacing: 0.02em;
    margin: 0;
  }

  .card-title-zh {
    font-family: var(--font-zh-body);
    font-size: 1.75rem;
    color: var(--ink-soft);
    opacity: 0.8;
    letter-spacing: 0.05em;
    margin: 0;
    font-weight: 500;
  }

  .card-summary {
    font-family: var(--font-zh-body);
    font-size: 0.9375rem;
    color: var(--ink-soft);
    line-height: 1.6;
    margin-top: 0.5rem;
  }

  .card-meta {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    flex-wrap: wrap;
    font-size: 0.875rem;
  }

  .meta-date {
    font-family: var(--font-sans);
    color: var(--ink-soft);
  }

  .meta-type {
    font-family: monospace;
    font-size: 0.75rem;
    color: var(--ink-soft);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .meta-status {
    font-family: monospace;
    font-size: 0.75rem;
    color: var(--ink-main);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .card-tags {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .tag-chip {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    color: var(--ink-soft);
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--ink-soft);
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .page-container {
      padding: 1.5rem;
    }

    .page-title {
      font-size: 2rem;
    }

    .narrative-subtitle {
      font-size: 1rem;
    }

    .identity-statement {
      font-size: 1.5rem;
    }

    .quest-statement {
      font-size: 1rem;
    }

    .principle-en {
      font-size: 1.125rem;
    }

    .principle-zh {
      font-size: 1.75rem;
    }

    .decision-logs-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .decision-card {
      padding: 1.5rem;
    }

    .card-title-en {
      font-size: 1.125rem;
    }

    .card-title-zh {
      font-size: 1.5rem;
    }

    .card-summary {
      font-size: 0.875rem;
    }

    .card-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    /* 分类导航响应式 */
    .gallery-filters {
      gap: 1rem;
    }

    .filter-tab {
      padding: 0.5rem 1rem;
    }

    .filter-label-en {
      font-size: 0.75rem;
    }

    .filter-label-zh {
      font-size: 1.5rem;
    }
  }
</style>
