---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

// 读取时间轴数据
const timelineData = await import('../content/timeline/resume.timeline.json');
const timeline = timelineData.default || timelineData;
---

<BaseLayout title="Resume - Personal Map">
  <main class="resume-container">
    <!-- 返回按钮 -->
    <a href="/" class="back-link">
      ← Back to Map
    </a>

    <!-- 内容区 -->
    <div class="resume-content">
      <header class="resume-header">
        <h1 class="page-title">Resume</h1>
        <p class="page-subtitle">个人简历</p>
      </header>

      <!-- 时间轴 -->
      <section class="timeline-section">
        <div class="timeline-description">
          <p class="timeline-text-en">Exploring the evolving landscape of AI & design</p>
          <p class="timeline-text-zh">探索 AI 与设计的演进之路</p>
        </div>

        <div class="timeline-container">
          <div class="timeline-arrow timeline-arrow-left">←</div>

          <div class="timeline-track">
            <!-- SVG 流动光束层 -->
            <svg class="timeline-beam-layer" preserveAspectRatio="none">
              <defs>
                <filter id="timelineBlur">
                  <feGaussianBlur stdDeviation="16"/>
                </filter>

                <linearGradient id="beamGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                  <stop offset="0%" stop-color="#f6d37a" stop-opacity="0.3" />
                  <stop offset="50%" stop-color="#fffef5" stop-opacity="0.7" />
                  <stop offset="100%" stop-color="#f6d37a" stop-opacity="0.3" />
                </linearGradient>
              </defs>

              <!-- 外层光晕 -->
              <line x1="0" y1="50%" x2="100%" y2="50%"
                    stroke="url(#beamGradient)"
                    stroke-width="40"
                    stroke-linecap="round"
                    filter="url(#timelineBlur)"
                    class="beam-outer" />

              <!-- 内层芯 -->
              <line x1="0" y1="50%" x2="100%" y2="50%"
                    stroke="#ffffff"
                    stroke-width="8"
                    stroke-linecap="round"
                    filter="url(#timelineBlur)"
                    class="beam-inner" />

              <!-- 流动高光 -->
              <line x1="0" y1="50%" x2="100%" y2="50%"
                    stroke="#ffffff"
                    stroke-width="4"
                    stroke-linecap="round"
                    stroke-dasharray="80 160"
                    class="beam-highlight" />

              <!-- 流动粒子 -->
              <circle r="6" fill="#ffffff" filter="url(#timelineBlur)" class="beam-particle particle-1">
                <animate attributeName="cx" from="0%" to="100%" dur="2s" repeatCount="indefinite" />
                <animate attributeName="cy" values="50%;50%;50%" dur="2s" repeatCount="indefinite" />
              </circle>
              <circle r="5" fill="#fffef5" filter="url(#timelineBlur)" class="beam-particle particle-2">
                <animate attributeName="cx" from="0%" to="100%" dur="2s" begin="0.5s" repeatCount="indefinite" />
                <animate attributeName="cy" values="50%;50%;50%" dur="2s" repeatCount="indefinite" />
              </circle>
              <circle r="4" fill="#f6d37a" filter="url(#timelineBlur)" class="beam-particle particle-3">
                <animate attributeName="cx" from="0%" to="100%" dur="2s" begin="1s" repeatCount="indefinite" />
                <animate attributeName="cy" values="50%;50%;50%" dur="2s" repeatCount="indefinite" />
              </circle>
            </svg>

            <div class="timeline-line"></div>

            <div class="timeline-years">
              {timeline.timeline.map((item: any) => (
                <div class="timeline-node" data-year={item.year}>
                  <img src={`/map/timeline/${item.year}.svg`} alt={item.year} class="year-badge" />
                  <div class="timeline-content">
                    <div class="timeline-header">
                      <div class="timeline-company">{item.company}</div>
                      <div class="timeline-role">{item.role}</div>
                    </div>
                    <div class="timeline-bullets">
                      {item.bullets.map((bullet: string, index: number) => (
                        <span class="bullet-item">
                          {index > 0 && <span class="bullet-separator"> / </span>}
                          <span class="bullet-text">· {bullet}</span>
                        </span>
                      ))}
                    </div>
                    <div class="timeline-details">
                      {item.details.map((paragraph: string) => (
                        <p class="detail-paragraph">{paragraph}</p>
                      ))}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="timeline-arrow timeline-arrow-right">→</div>
        </div>
      </section>

      <!-- 技能面板 -->
      <section class="skills-panel-section">
        <div class="skills-panels-wrapper">
          <!-- 视觉技能面板 -->
          <div class="skill-panel">
            <div class="panel-background">
              <img src="/visual.svg" alt="Visual Skills Panel" class="panel-svg" />
            </div>
            <div class="panel-content">
              <!-- 第一组 -->
              <div class="skill-group">
                {[
                  { name: 'ComfyUI', level: 85 },
                  { name: 'WebUI', level: 80 },
                  { name: 'LoRA训练', level: 75 }
                ].map(skill => (
                  <div class="skill-bar-wrapper">
                    <div class="skill-bar-container">
                      <img src="/bar.svg" alt="" class="bar-bg" />
                      <div class="bar-fill" style={`width: ${skill.level}%`}></div>
                      <span class="bar-name">{skill.name}</span>
                      <span class="bar-value">{skill.level}</span>
                    </div>
                  </div>
                ))}
              </div>
              <!-- 第二组 -->
              <div class="skill-group">
                {[
                  { name: 'Midjourney', level: 78 },
                  { name: 'PS', level: 85 },
                  { name: '可灵', level: 60 }
                ].map(skill => (
                  <div class="skill-bar-wrapper">
                    <div class="skill-bar-container">
                      <img src="/bar.svg" alt="" class="bar-bg" />
                      <div class="bar-fill" style={`width: ${skill.level}%`}></div>
                      <span class="bar-name">{skill.name}</span>
                      <span class="bar-value">{skill.level}</span>
                    </div>
                  </div>
                ))}
              </div>
              <!-- 第三组 -->
              <div class="skill-group">
                {[
                  { name: 'Runway', level: 70 },
                  { name: '海螺', level: 55 },
                  { name: 'CAD', level: 60 }
                ].map(skill => (
                  <div class="skill-bar-wrapper">
                    <div class="skill-bar-container">
                      <img src="/bar.svg" alt="" class="bar-bg" />
                      <div class="bar-fill" style={`width: ${skill.level}%`}></div>
                      <span class="bar-name">{skill.name}</span>
                      <span class="bar-value">{skill.level}</span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- 编程技能面板 -->
          <div class="skill-panel">
            <div class="panel-background">
              <img src="/coding.svg" alt="Coding Skills Panel" class="panel-svg" />
            </div>
            <div class="panel-content">
              <!-- 第一组 -->
              <div class="skill-group">
                {[
                  { name: 'Cursor', level: 85 },
                  { name: 'Agent', level: 70 },
                  { name: 'Claude+ChatGPT', level: 88 }
                ].map(skill => (
                  <div class="skill-bar-wrapper">
                    <div class="skill-bar-container">
                      <img src="/bar.svg" alt="" class="bar-bg" />
                      <div class="bar-fill" style={`width: ${skill.level}%`}></div>
                      <span class="bar-name">{skill.name}</span>
                      <span class="bar-value">{skill.level}</span>
                    </div>
                  </div>
                ))}
              </div>
              <!-- 第二组 -->
              <div class="skill-group">
                {[
                  { name: 'Python', level: 75 },
                  { name: 'JavaScript', level: 80 },
                  { name: 'React', level: 78 }
                ].map(skill => (
                  <div class="skill-bar-wrapper">
                    <div class="skill-bar-container">
                      <img src="/bar.svg" alt="" class="bar-bg" />
                      <div class="bar-fill" style={`width: ${skill.level}%`}></div>
                      <span class="bar-name">{skill.name}</span>
                      <span class="bar-value">{skill.level}</span>
                    </div>
                  </div>
                ))}
              </div>
              <!-- 第三组 -->
              <div class="skill-group">
                {[
                  { name: 'Node.js', level: 72 },
                  { name: 'Git', level: 85 },
                  { name: 'Office', level: 75 }
                ].map(skill => (
                  <div class="skill-bar-wrapper">
                    <div class="skill-bar-container">
                      <img src="/bar.svg" alt="" class="bar-bg" />
                      <div class="bar-fill" style={`width: ${skill.level}%`}></div>
                      <span class="bar-name">{skill.name}</span>
                      <span class="bar-value">{skill.level}</span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- 导航到其他页面 -->
      <section class="resume-section">
        <h2 class="section-title">Explore More</h2>
        <div class="navigation-grid">
          <a href="/command" class="nav-card">
            <h3>Command Center</h3>
            <p>决策中枢</p>
          </a>
          <a href="/command-center" class="nav-card">
            <h3>Decision Logs</h3>
            <p>决策文档</p>
          </a>
          <a href="/log" class="nav-card">
            <h3>Knowledge Tower</h3>
            <p>知识塔</p>
          </a>
          <a href="/workshop" class="nav-card">
            <h3>AI Workshop</h3>
            <p>AI 实验坊</p>
          </a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .resume-container {
    min-height: 100vh;
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--ink-soft);
    margin-bottom: 3rem;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: var(--ink-main);
  }

  .resume-content {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* 时间轴突破容器限制并居中 */
  .timeline-section {
    width: 100%;
    margin-bottom: 4rem;
    padding: 5rem;
    margin-top: -50px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .timeline-section .timeline-container,
  .timeline-section .timeline-description {
    max-width: none;
    width: auto;
  }

  .resume-header {
    margin-bottom: 4rem;
    text-align: center;
  }

  .page-title {
    font-family: var(--font-serif);
    font-size: 3rem;
    color: var(--ink-main);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .page-subtitle {
    font-family: var(--font-zh-display);
    font-size: 3rem;
    color: var(--ink-soft);
    opacity: 0.7;
    letter-spacing: 0.05em;
  }

  .timeline-container {
    display: flex;
    align-items: center;
    gap: 0.1rem;
    margin-bottom: 6rem;
    margin-top: -3rem;
  }

  .timeline-arrow {
    font-family: var(--font-serif);
    font-size: 8rem;
    color: var(--ink-soft);
    opacity: 0.6;
    flex-shrink: 0;
  }

  .timeline-track {
    flex: 1;
    position: relative;
    height: 50px;
    display: flex;
    align-items: center;
  }

  /* 流动光束层 */
  .timeline-beam-layer {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
    overflow: visible;
  }

  .beam-outer {
    opacity: 0.5;
  }

  .beam-inner {
    opacity: 0.7;
  }

  .beam-highlight {
    opacity: 0.6;
    animation: beamFlow 2s linear infinite;
  }

  @keyframes beamFlow {
    to {
      stroke-dashoffset: -120;
    }
  }

  .beam-particle {
    opacity: 0.7;
  }

  .timeline-line {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(
      to right,
      transparent,
      rgba(246, 211, 122, 0.2) 10%,
      rgba(246, 211, 122, 0.2) 90%,
      transparent
    );
    opacity: 0.4;
    z-index: 0;
  }

  .timeline-years {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    position: relative;
    z-index: 2;
    width: 100%;
    margin-top: auto;
    margin-bottom: auto;
  }

  .timeline-node {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    cursor: pointer;
    transition: transform 0.3s ease;
    position: relative;
    flex: 1;
  }

  .timeline-node:hover {
    transform: translateY(-16px) scale(1.08);
  }

  .year-badge {
    width: 800px;
    height: auto;
    filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.15));
    transition: filter 0.3s ease;
    margin-top: -60px;
  }

  .timeline-node:hover .year-badge {
    filter: drop-shadow(0 16px 32px rgba(0, 0, 0, 0.25));
  }

  /* 时间轴内容样式 */
  .timeline-content {
    max-width: 600px;
    min-height: 180px;
    text-align: center;
    padding: 1.5rem;
    border: 1px solid rgba(74, 74, 74, 0.2);
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(8px);
    transition: all 0.3s ease;
    position: relative;
  }

  .timeline-node:hover .timeline-content {
    border-color: var(--ink-soft);
    background: rgba(255, 255, 255, 0.5);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    min-height: 240px;
  }

  .timeline-header {
    margin-bottom: 1rem;
  }

  .timeline-company {
    font-family: var(--font-zh-body);
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--ink-main);
    margin-bottom: 0.25rem;
  }

  .timeline-role {
    font-family: var(--font-zh-body);
    font-size: 0.75rem;
    color: var(--ink-soft);
    font-style: italic;
  }

  /* 摘要bullets - 默认显示 */
  .timeline-bullets {
    font-family: var(--font-zh-body);
    font-size: 0.7rem;
    line-height: 1.8;
    color: var(--ink-soft);
    opacity: 1;
    transition: opacity 0.3s ease;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.25rem;
  }

  .bullet-item {
    display: inline;
  }

  .bullet-separator {
    color: var(--ink-faded);
  }

  .bullet-text {
    white-space: nowrap;
  }

  /* hover时隐藏bullets */
  .timeline-node:hover .timeline-bullets {
    opacity: 0;
    position: absolute;
    pointer-events: none;
  }

  /* 详情details - 默认隐藏 */
  .timeline-details {
    font-family: var(--font-zh-body);
    font-size: 0.75rem;
    line-height: 1.8;
    color: var(--ink-soft);
    text-align: left;
    opacity: 0;
    position: absolute;
    top: 5rem;
    left: 1.5rem;
    right: 1.5rem;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .detail-paragraph {
    margin-bottom: 0.75rem;
  }

  .detail-paragraph:last-child {
    margin-bottom: 0;
  }

  /* hover时显示details */
  .timeline-node:hover .timeline-details {
    opacity: 1;
    position: relative;
    top: 0;
    left: 0;
    right: 0;
    pointer-events: auto;
  }

  .timeline-description {
    text-align: center;
    padding: 0 0 4rem 0;
    margin-bottom: 2rem;
  }

  .timeline-text-en {
    font-family: var(--font-serif);
    font-size: 1rem;
    color: var(--ink-main);
    font-style: italic;
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .timeline-text-zh {
    font-family: var(--font-zh-display);
    font-size: 2rem;
    color: var(--ink-soft);
    opacity: 0.7;
    letter-spacing: 0.05em;
  }

  /* 尊重用户动画偏好 */
  @media (prefers-reduced-motion: reduce) {
    .beam-highlight {
      animation: none !important;
      stroke-dasharray: none !important;
    }

    .beam-particle {
      display: none;
    }

    .timeline-node {
      transition: none !important;
    }
  }

  .resume-section {
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(74, 74, 74, 0.2);
  }

  .resume-section:last-child {
    border-bottom: none;
  }

  /* ========== 技能面板样式 ========== */
  .skills-panel-section {
    margin: 12rem 0;
    padding: 0;
    transform: scale(0.8);
  }

  /* 双面板容器 - 并列布局 */
  .skills-panels-wrapper {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
    max-width: 1600px;
    margin: 0 auto;
  }

  /* 单个技能面板 */
  .skill-panel {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1.2; /* 固定面板宽高比，确保背景SVG不变形 */
  }

  /* 面板背景层 */
  .panel-background {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }

  .panel-svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
    opacity: 0.95;
    filter: drop-shadow(0 8px 24px rgba(0, 0, 0, 0.15));
  }

  /* 面板内容层 */
  .panel-content {
    position: absolute;
    inset: 0;
    z-index: 1;
    padding: 4rem 3rem;
    padding-top: calc(4rem + 45px); /* bar整体往下移动45px */
    display: flex;
    flex-direction: column;
    justify-content: center; /* 垂直居中 */
    align-items: center; /* 水平居中 */
    gap: 35px; /* 组与组之间的间距 */
  }

  /* 技能分组 - 3个bar一组 */
  .skill-group {
    display: flex;
    flex-direction: column;
    gap: 5px; /* 组内bar的间距 */
    width: 75%; /* 控制整组的宽度 */
  }

  /* 单个技能条包装器 */
  .skill-bar-wrapper {
    width: 100%; /* 相对于skill-group的100% */
    transition: transform 0.3s ease;
  }

  .skill-bar-wrapper:hover {
    transform: translateX(8px);
  }

  /* 技能条容器 - 相对定位以便子元素绝对定位 */
  .skill-bar-container {
    position: relative;
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
  }

  /* bar.svg 背景图 */
  .bar-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: fill;
    z-index: 1;
    pointer-events: none;
  }

  /* 进度填充层 - 黄色光束效果 */
  .bar-fill {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 2px;
    height: 60%; /* 光束高度小于bar高度 */
    background: linear-gradient(
      to right,
      rgba(246, 211, 122, 0) 0%,
      rgba(246, 211, 122, 1) 100%
    );
    z-index: 2;
    transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    border-radius: 12px; /* 匹配bar.svg的倒角 */
    box-shadow:
      inset 0 0 20px rgba(255, 255, 255, 0.3),
      0 0 12px rgba(246, 211, 122, 0.5);
    overflow: hidden;
    max-width: calc(100% - 4px);
  }

  /* 进度条内部流动高光 */
  .bar-fill::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.4) 0%,
      rgba(255, 255, 255, 0.15) 30%,
      transparent 50%,
      rgba(0, 0, 0, 0.05) 100%
    );
    border-radius: 12px;
    pointer-events: none;
  }

  /* 流动光束效果 */
  .bar-fill::after {
    content: '';
    position: absolute;
    top: 0;
    left: -30%;
    width: 30%;
    height: 100%;
    background: linear-gradient(
      to right,
      transparent,
      rgba(255, 254, 245, 0.6),
      transparent
    );
    animation: barFlow 2.5s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes barFlow {
    0% {
      left: -30%;
    }
    100% {
      left: 130%;
    }
  }

  /* 技能名称 */
  .bar-name {
    position: absolute;
    left: 30px;
    z-index: 3;
    font-family: var(--font-sans);
    font-size: 1.1rem;
    font-weight: 700;
    color: #e0d2ae;
    text-shadow:
      1px 1px 0 rgba(255, 255, 255, 0.5),
      0 0 12px rgba(255, 255, 255, 0.4);
    pointer-events: none;
    white-space: nowrap;
  }

  /* 技能数值 */
  .bar-value {
    position: absolute;
    right: 30px;
    z-index: 3;
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 700;
    color: #e0d2ae;
    text-shadow:
      1px 1px 0 rgba(255, 255, 255, 0.5),
      0 0 12px rgba(255, 255, 255, 0.4);
    pointer-events: none;
  }

  /* hover 增强效果 */
  .skill-bar-wrapper:hover .bar-fill {
    box-shadow:
      inset 0 0 30px rgba(255, 255, 255, 0.6),
      0 0 24px rgba(246, 211, 122, 0.8),
      0 0 40px rgba(246, 211, 122, 0.4);
  }

  .skill-bar-wrapper:hover .bar-name,
  .skill-bar-wrapper:hover .bar-value {
    text-shadow:
      1px 1px 0 rgba(255, 255, 255, 0.6),
      0 0 16px rgba(255, 255, 255, 0.6);
  }

  /* 尊重用户动画偏好 */
  @media (prefers-reduced-motion: reduce) {
    .bar-fill {
      transition: none;
    }
    .bar-fill::after {
      animation: none;
    }
    .skill-bar-wrapper {
      transition: none;
    }
  }

  /* 响应式 - 移动端单列 */
  @media (max-width: 1200px) {
    .skills-panels-wrapper {
      grid-template-columns: 1fr;
      gap: 4rem;
