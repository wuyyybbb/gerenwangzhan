---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

// 读取时间轴数据
const timelineData = await import('../content/timeline/resume.timeline.json');
const timeline = timelineData.default || timelineData;
---

<BaseLayout title="Resume - Personal Map">
  <main class="resume-container">
    <!-- 返回按钮 -->
    <a href="/" class="back-link">
      ← Back to Map
    </a>

    <!-- 内容区 -->
    <div class="resume-content">
      <header class="resume-header">
        <h1 class="page-title">Resume</h1>
        <p class="page-subtitle">个人简历</p>
      </header>

      <!-- 时间轴 -->
      <section class="timeline-section">
        <div class="timeline-description">
          <!-- Sitting Girl - 左侧 -->
          <div class="sitting-girl">
            <img src="/girl/sitting_girl.svg" alt="Sitting Girl" loading="lazy" decoding="async" />
          </div>

          <p class="timeline-text-en">Exploring the evolving landscape of AI & design</p>
          <p class="timeline-text-zh">黑客与画家的演进之路</p>

          <!-- Hiking Girl - 右侧 -->
          <div class="hiking-girl">
            <img src="/girl/hiking_girl.svg" alt="Hiking Girl" loading="lazy" decoding="async" />
          </div>
        </div>

        <div class="timeline-container">
          <div class="timeline-arrow timeline-arrow-left">←</div>

          <div class="timeline-track">
            <!-- SVG 流动光束层 -->
            <svg class="timeline-beam-layer" viewBox="0 0 1200 50" preserveAspectRatio="none">
              <defs>
                <!-- 多级模糊滤镜 -->
                <filter id="timelineBlur100">
                  <feGaussianBlur stdDeviation="20"/>
                </filter>
                <filter id="timelineBlur30">
                  <feGaussianBlur stdDeviation="15"/>
                </filter>
                <filter id="timelineBlur12">
                  <feGaussianBlur stdDeviation="8"/>
                </filter>
                <filter id="timelineBlur6">
                  <feGaussianBlur stdDeviation="4"/>
                </filter>

                <!-- 外层渐变：淡金色光晕 -->
                <linearGradient id="beamGold" x1="0%" y1="0%" x2="100%" y2="0%">
                  <stop offset="0%" stop-color="#f5bd16ff" stop-opacity="1.0" />
                  <stop offset="50%" stop-color="#d4b506ff" stop-opacity="0.95" />
                  <stop offset="100%" stop-color="#ffcc33" stop-opacity="0.9" />
                </linearGradient>

                <!-- 中层渐变：金黄雾气 -->
                <linearGradient id="beamWarm" x1="0%" y1="0%" x2="100%" y2="0%">
                  <stop offset="0%" stop-color="#f7c327ff" stop-opacity="0.8" />
                  <stop offset="50%" stop-color="#eec04dff" stop-opacity="0.7" />
                  <stop offset="100%" stop-color="#ffcc33" stop-opacity="0.65" />
                </linearGradient>

                <!-- 内层渐变：白色流动芯 -->
                <linearGradient id="beamCore" x1="0%" y1="0%" x2="100%" y2="0%">
                  <stop offset="0%" stop-color="#ffffff" stop-opacity="1" />
                  <stop offset="50%" stop-color="#fffef5" stop-opacity="0.9" />
                  <stop offset="100%" stop-color="#ffffff" stop-opacity="0.8" />
                </linearGradient>
              </defs>

              <!-- 外层：极淡金色光晕（最宽，强模糊） -->
              <line x1="0" y1="25" x2="1200" y2="25"
                    stroke="url(#beamGold)"
                    stroke-width="40"
                    stroke-linecap="round"
                    filter="url(#timelineBlur100)"
                    class="beam-outer" />

              <!-- 中层：淡金雾气（中等宽度，中等模糊） -->
              <line x1="0" y1="25" x2="1200" y2="25"
                    stroke="url(#beamWarm)"
                    stroke-width="18"
                    stroke-linecap="round"
                    filter="url(#timelineBlur12)"
                    class="beam-mid" />

              <!-- 内层：淡白芯（较粗，轻微模糊） -->
              <line x1="0" y1="25" x2="1200" y2="25"
                    stroke="url(#beamCore)"
                    stroke-width="8"
                    stroke-linecap="round"
                    filter="url(#timelineBlur6)"
                    class="beam-inner" />

              <!-- 流动高光（白色细线） -->
              <line x1="0" y1="25" x2="1200" y2="25"
                    stroke="#ffffff"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-dasharray="60 120"
                    class="beam-highlight" />

              <!-- 流动粒子效果（白色光点，极快流动） -->
              <circle r="2.5" fill="#ffffff" filter="url(#timelineBlur6)" class="beam-particle particle-1" cy="25">
                <animate attributeName="cx" from="0" to="1200" dur="0.5s" repeatCount="indefinite" />
              </circle>
              <circle r="2" fill="#ffffff" filter="url(#timelineBlur6)" class="beam-particle particle-2" cy="25">
                <animate attributeName="cx" from="0" to="1200" dur="0.5s" begin="0.15s" repeatCount="indefinite" />
              </circle>
              <circle r="1.5" fill="#fffef5" filter="url(#timelineBlur6)" class="beam-particle particle-3" cy="25">
                <animate attributeName="cx" from="0" to="1200" dur="0.5s" begin="0.3s" repeatCount="indefinite" />
              </circle>
            </svg>

            <div class="timeline-line"></div>

            <div class="timeline-years">
              {timeline.timeline.map((item: any) => (
                <div class="timeline-node" data-year={item.year}>
                  <img src={`/map/timeline/${item.year}.svg`} alt={item.year} class="year-badge" fetchpriority="high" decoding="async" />
                  <div class="timeline-content">
                    <div class="timeline-header">
                      <div class="timeline-company">{item.company}</div>
                      <div class="timeline-role">{item.role}</div>
                    </div>
                    <div class="timeline-bullets">
                      {item.bullets.map((bullet: string) => (
                        <div class="bullet-item">
                          <span class="bullet-dot">•</span>
                          <span class="bullet-text" set:html={bullet.replace(/^·\s*/, '').replace(/(\d+[万张倍+%×–-]+|\bComfyUI\b|\bWebUI\b|\bLoRA\b|\bAI\b|\bMidjourney\b|\bPrompt\b|\bAgent\b|\bCursor\b|\bMall\b|\bPPT\b|\bRevit\b|\bSketchUp\b|\bRhino\b|\bPhotoshop\b|\bYouTube\b|\bCoze\b|\bRunway\b|\bSaaS\b|\bQuery\b|「[^」]+」|出图|决策服务|空间逻辑|视觉表达|叙事|完整生命周期|商业空间|跨文化沟通|创意表达|风格探索|概念方案|视觉迭代|前期出图|方案表达|训练师|博主|工具体系建设|课程内容|商业化|电商|图片制作|个人效率|对外输出|交付|服装业务|规模化生产|中型企业|可落地|可复制|产品化|视频项目|意图识别|改写|可持续产品)/g, '<strong class="highlight">$1</strong>')} />
                        </div>
                      ))}
                    </div>
                    <ul class="timeline-details">
                      {item.details.map((paragraph: string) => (
                        <li class="detail-item" set:html={paragraph
                          .replace(/(\d+[万张倍+%×—–-]+|\bComfyUI\b|\bWebUI\b|\bLoRA\b|\bAI\b|\bMidjourney\b|\bPrompt\b|\bAgent\b|\bCursor\b|\bMall\b|\bPPT\b|\bRevit\b|\bSketchUp\b|\bRhino\b|\bPhotoshop\b|\bYouTube\b|\bCoze\b|\bRunway\b|\bLuma\b|\bSaaS\b|\bQuery\b|\bBeiying\b|200–300|600\+|2–3|2\.5–3|17\.5\s*万|3\.8%|40\+|「[^」]+」|倍影|出图|决策服务|空间逻辑|视觉表达|叙事完整|商业逻辑|商业空间|商业价值|完整周期|跨文化|创意表达|风格一致性|可控|可解释|可落地|前期概念|风格探索|概念生成|尝鲜工具|设计流程|风格参考|定向训练|输出稳定性|技术探索|使用边界|阶段性价值|训练师|博主|陈生\s*2\.0|产品化|商业化|电商|可复用|可复现|可教学|教学友好|商业可用|可传播|可售卖|使用者|能力输出者|创作者视角|用户视角|规模化|成本|效率|技术表达|商业沟通能力|用户洞察|降低门槛|放大能力|技术壁垒|投入产出比|内容产品|工作流|商品图|模型训练|服装业务|业务流程|内容引擎|组织赋能者|个人高手|中型企业|中型组织|系统性验证|人群画像|渠道特性|投放逻辑|银发矩阵号|CTR|曝光|转化率|秋冬商品|测款|场景图|模特图|视频脚本|服装设计|品牌营销|门店视觉陈列|培训计划|操作规范|协作成本|可持续性|节奏快|款式多|验证周期短|可灵|即梦|数字人|内容投放|普通运营|运营逻辑|视频项目|项目交付|意图识别|意图驱动|参数驱动|改写|增强|任务拆解|执行路径|智能执行系统|自然语言输入|场景选择|低学习成本|高确定性反馈|前端设计|交互设计|非技术用户|团队负责人|产品推动者|技术决策|产品方向|系统与体验|抽象层|用户留存|可持续迭代|长期产品运营|AI\s*系统构建者|AI\s*产品创造者|个人执行者|解决问题的人|定义问题|构建系统|营销视频|内容视频|操作复杂|成本不可控|效果不稳定|强依赖|核心痛点)/g, '<strong class="highlight">$1</strong>')
                          .replace(/(具体项目|具体工作|具体工作与项目|核心成长|工具体系|工具体系与方法|团队协作|团队协作与商业沟通|商业沟通|行业认知|行业认知与用户洞察|行业认知与产品洞察|行业洞察)：/g, '<span class="detail-section-title">$1：</span>')
                        } />
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="timeline-arrow timeline-arrow-right">→</div>
        </div>
      </section>

      <!-- Capabilities Section -->
      <section class="capabilities-section">
        <h2 class="section-label">CAPABILITIES</h2>

        <div class="capabilities-grid">
          <!-- 左列：视觉 / AI 生成 -->
          <div class="capability-column">
            <div class="capability-item">
              <div class="capability-header">
                <span class="capability-name">AI 工作流工程（ComfyUI、Coze）<br>AI Workflow Engineering</span>
                <span class="capability-value">95%</span>
              </div>
              <div class="capability-bar">
                <div class="capability-fill" style="width: 95%"></div>
              </div>
            </div>

            <div class="capability-item">
              <div class="capability-header">
                <span class="capability-name">模型与工具编排能力<br>Model & Tool Orchestration</span>
                <span class="capability-value">85%</span>
              </div>
              <div class="capability-bar">
                <div class="capability-fill" style="width: 85%"></div>
              </div>
            </div>

            <div class="capability-item">
              <div class="capability-header">
                <span class="capability-name">AI 内容策略<br>AI Content Intelligence</span>
                <span class="capability-value">80%</span>
              </div>
              <div class="capability-bar">
                <div class="capability-fill" style="width: 80%"></div>
              </div>
            </div>

            <div class="capability-item">
              <div class="capability-header">
                <span class="capability-name">Prompt / Query 工程<br>Prompt & Query Optimization</span>
                <span class="capability-value">85%</span>
              </div>
              <div class="capability-bar">
                <div class="capability-fill" style="width: 85%"></div>
              </div>
            </div>
          </div>

          <!-- 右列：编程 / AI 开发 -->
          <div class="capability-column">
            <div class="capability-item">
              <div class="capability-header">
                <span class="capability-name">AI 系统与 Agent<br>AI Systems & Agents</span>
                <span class="capability-value">75%</span>
              </div>
              <div class="capability-bar">
                <div class="capability-fill" style="width: 75%"></div>
              </div>
            </div>

            <div class="capability-item">
              <div class="capability-header">
                <span class="capability-name">AI 产品化能力<br>AI Productization</span>
                <span class="capability-value">85%</span>
              </div>
              <div class="capability-bar">
                <div class="capability-fill" style="width: 85%"></div>
              </div>
            </div>

            <div class="capability-item">
              <div class="capability-header">
                <span class="capability-name">创意与设计底层能力<br>Creative & Design Foundation</span>
                <span class="capability-value">90%</span>
              </div>
              <div class="capability-bar">
                <div class="capability-fill" style="width: 90%"></div>
              </div>
            </div>

            <div class="capability-item">
              <div class="capability-header">
                <span class="capability-name">表达与沟通能力<br>Presentation & Communication</span>
                <span class="capability-value">85%</span>
              </div>
              <div class="capability-bar">
                <div class="capability-fill" style="width: 85%"></div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- 导航到其他页面 -->
      <section class="resume-section">
        <h2 class="section-title">Explore More</h2>
        <div class="navigation-grid">
          <a href="/command" class="nav-card">
            <h3>Command Center</h3>
            <p>决策中枢</p>
          </a>
          <a href="/command-center" class="nav-card">
            <h3>Decision Logs</h3>
            <p>决策文档</p>
          </a>
          <a href="/log" class="nav-card">
            <h3>Knowledge Tower</h3>
            <p>知识塔</p>
          </a>
          <a href="/workshop" class="nav-card">
            <h3>AI Workshop</h3>
            <p>AI 实验坊</p>
          </a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .resume-container {
    min-height: 100vh;
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--ink-soft);
    margin-bottom: 3rem;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: var(--ink-main);
  }

  .resume-content {
    max-width: 1600px;
    margin: 0 auto;
  }

  /* 时间轴突破容器限制并居中 */
  .timeline-section {
    width: 100%;
    margin-bottom: 4rem;
    padding: 5rem;
    margin-top: -50px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .timeline-section .timeline-container,
  .timeline-section .timeline-description {
    max-width: none;
    width: auto;
  }

  .resume-header {
    margin-bottom: 4rem;
    text-align: center;
    position: relative;
  }

  .page-title {
    font-family: var(--font-serif);
    font-size: 3rem;
    color: var(--ink-main);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .page-subtitle {
    font-family: var(--font-zh-display);
    font-size: 3rem;
    color: var(--ink-soft);
    opacity: 0.7;
    letter-spacing: 0.05em;
  }

  .timeline-container {
    display: flex;
    align-items: center;
    gap: 0.1rem;
    margin-bottom: 6rem;
    margin-top: -3rem;
    padding: 2rem 0;
  }

  .timeline-arrow {
    font-family: var(--font-serif);
    font-size: 8rem;
    color: var(--ink-soft);
    opacity: 0.6;
    flex-shrink: 0;
  }

  .timeline-track {
    flex: 1;
    position: relative;
    height: 50px;
    display: flex;
    align-items: center;
    overflow: visible;
  }

  /* 流动光束层 */
  .timeline-beam-layer {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
    overflow: visible;
  }

  /* 三层光束透明度控制 */
  .beam-outer {
    opacity: 0.8;
  }

  .beam-mid {
    opacity: 0.9;
  }

  .beam-inner {
    opacity: 1.0;
  }

  /* 流动高光动画（白色流动，极快） */
  .beam-highlight {
    opacity: 0.6;
    animation: timelineHighlightFlow 0.5s linear infinite;
  }

  @keyframes timelineHighlightFlow {
    to {
      stroke-dashoffset: -200;
    }
  }

  /* 流动粒子效果（白色光点，极快） */
  .beam-particle {
    opacity: 0.65;
  }

  .timeline-line {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(
      to right,
      transparent,
      rgba(246, 211, 122, 0.2) 10%,
      rgba(246, 211, 122, 0.2) 90%,
      transparent
    );
    opacity: 0.4;
    z-index: 0;
  }

  .timeline-years {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    position: relative;
    z-index: 2;
    width: 100%;
    margin-top: auto;
    margin-bottom: auto;
  }

  .timeline-node {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    cursor: pointer;
    transition: transform 0.3s ease;
    position: relative;
    flex: 0 0 auto;
  }

  .timeline-node:hover {
    transform: translateY(-16px) scale(1.08);
  }

  .year-badge {
    width: 180px;
    height: auto;
    max-width: 180px;
    filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.15));
    transition: filter 0.3s ease;
    margin-top: -30px;
    object-fit: contain;
  }

  .timeline-node:hover .year-badge {
    filter: drop-shadow(0 16px 32px rgba(0, 0, 0, 0.25));
  }

  /* 时间轴内容样式 */
  .timeline-content {
    width: 240px;
    min-height: 400px;
    height: 240px;
    padding: 1.5rem;
    border: 1px solid rgba(74, 74, 74, 0.2);
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(8px);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .timeline-node:hover .timeline-content {
    border-color: var(--ink-soft);
    background: rgba(255, 255, 255, 0.5);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    width: 350px;
    height: 600px;
    padding: 2rem;
  }

  .timeline-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .timeline-company {
    font-family: var(--font-zh-body);
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--ink-main);
    margin-bottom: 0.25rem;
  }

  .timeline-role {
    font-family: var(--font-zh-body);
    font-size: 0.75rem;
    color: var(--ink-soft);
    font-style: italic;
  }

  /* 摘要bullets - 默认显示 */
  .timeline-bullets {
    font-family: var(--font-zh-body);
    font-size: 0.65rem;
    line-height: 1.8;
    color: var(--ink-soft);
    opacity: 1;
    transition: opacity 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    gap: 0.25rem;
    width: 100%;
  }

  .bullet-item {
    display: flex;
    align-items: flex-start;
    width: 100%;
    gap: 0.3rem;
  }

  .bullet-dot {
    font-size: 1.5em;
    font-weight: bold;
    line-height: 1.2;
    flex-shrink: 0;
    color: var(--ink-main);
  }

  .bullet-text {
    white-space: normal;
    word-break: break-word;
    flex: 1;
  }

  .highlight {
    color: var(--ink-main);
    font-weight: 600;
    background: rgba(246, 211, 122, 0.15);
    padding: 0.1em 0.3em;
    border-radius: 3px;
  }

  .detail-item .detail-section-title {
    color: #61503e !important;
    font-weight: 700 !important;
    font-size: 1.1em !important;
  }

  /* hover时隐藏bullets */
  .timeline-node:hover .timeline-bullets {
    opacity: 0;
    position: absolute;
    pointer-events: none;
  }

  /* 详情details - 默认隐藏 */
  .timeline-details {
    font-family: var(--font-zh-body);
    font-size: 0.7rem;
    line-height: 1.7;
    color: var(--ink-soft);
    text-align: left;
    opacity: 0;
    position: absolute;
    top: 5rem;
    left: 1.5rem;
    right: 1.5rem;
    transition: opacity 0.3s ease;
    pointer-events: none;
    list-style: none;
    padding: 0;
    margin: 0;
    max-height: 480px;
    overflow-y: auto;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
  }

  /* 隐藏滚动条 - Chrome, Safari */
  .timeline-details::-webkit-scrollbar {
    display: none;
  }

  .detail-item {
    margin-bottom: 0.7rem;
    padding-left: 1.2em;
    position: relative;
  }

  .detail-item::before {
    content: '•';
    position: absolute;
    left: 0;
    font-size: 1.3em;
    font-weight: bold;
    line-height: 1.3;
  }

  .detail-item:last-child {
    margin-bottom: 0;
  }

  /* hover时显示details */
  .timeline-node:hover .timeline-details {
    opacity: 1;
    position: relative;
    top: 0;
    left: 0;
    right: 0;
